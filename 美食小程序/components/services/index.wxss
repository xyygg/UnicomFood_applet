/* components/services/index.wxss */
/* 客服按钮 */
.kefu{position: fixed;right:3vw;bottom: 10vh;justify-content: center;display: flex;flex-flow: column;background: #fff;padding:0 10rpx 10rpx;border-radius: 10rpx;}
.kefu image{width:90rpx;height:90rpx;border-radius: 50%;}
.kefu text{font-size: 12px;text-align:center;display: inline-block;}
/* 客服二维码 */
.layer{width:100%;height:100%;background: rgba(0,0,0,0.8);position: fixed;top:0;left:0;display: flex;justify-content: center;align-items: center;overflow:hidden; visibility: hidden;opacity: 0;-webkit-transition: opacity 0.35s, visibility 0.35s; z-index: 1000}
.layercontent{width:60%;background: #fff;border-radius: 30rpx;padding:16vw 40rpx 40rpx;position: relative;}
.headImg{width:200rpx;height:200rpx;position: absolute;left:50%;top:-100rpx;margin-left:-100rpx;border-radius: 50%;}
.codeImg{display:block;width:44vw;margin:0 auto 10px;height:44vw;}
.codeTxt{text-align: center;font-size: 14px;color: #999}
.active{visibility: visible;opacity: 1; -webkit-transition: opacity 0.35s;}